{
  "name": "hr-erp-system",
  "version": "1.0.0",
  "description": "Production-ready HR ERP System with Employee, Attendance, Project, and Document Management",
  "main": "backend/server.js",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "start": "node backend/server.js",
    "server": "cross-env PORT=5000 nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "install-all": "npm install && npm install --prefix frontend",
    "seed": "node backend/seed.js"
  },
  "keywords": [
    "HR",
    "ERP",
    "Employee Management",
    "Attendance",
    "MERN",
    "React",
    "Node.js",
    "MongoDB"
  ],
  "author": "HR ERP Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "cross-env": "^10.1.0",
    "nodemon": "^2.0.20"
  }
}